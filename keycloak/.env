# Admin bootstrap
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin123

# Database
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://fincore-pg-db:5432/keycloak
KC_DB_USERNAME=postgres
KC_DB_PASSWORD=postgres

# Production hostname (CHANGE THIS)
KC_HOSTNAME=auth.fincore.taalaminnovations.co.ke
KC_HOSTNAME_STRICT=true
KC_PROXY=edge

# HTTP settings
# Recommended: terminate TLS at a reverse proxy (Nginx/Traefik/ALB) and keep HTTP internally
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080
KC_PROXY_HEADERS=xforwarded

# Health/metrics (optional)
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# IMPORTANT for production: you must provide a stable secret
KC_HOSTNAME_STRICT_HTTPS=false
